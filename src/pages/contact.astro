---
import Layout from '../layouts/Layout.astro';
import { site } from '../data/site.js';

// ─── EDIT YOUR CONTENT HERE ───────────────────────────────────────────────────

// REPLACE: real contact details
const contactEmail = 'hello@projectatlas.org';
const contactAddress = 'Temple City, CA 91780';
const contactMeetings = 'Board meetings held monthly.';
const contactMeetingsSub = 'See district calendar for schedule.';

const contactTopics = [
  'General Inquiry',
  'Student Interest',
  'Parent / Enrollment',
  'Board / Advocacy',
  'Media / Press',
  'Partnership',
  'Other',
];

// ─────────────────────────────────────────────────────────────────────────────
---

<Layout
  title="Contact"
  description="Contact Project Atlas — reach the coalition, connect with team advisors, or learn about TCUSD enrollment."
>

  <!-- ─── PAGE HERO ────────────────────────────────────────────── -->
  <section class="page-hero">
    <div class="page-hero-grid" aria-hidden="true"></div>
    <div class="container" style="position:relative; z-index:1;">
      <div class="hero-text-block">
        <div class="badge badge-navy reveal" style="margin-bottom:24px;">
          <span class="badge-dot"></span> Get in Touch
        </div>
        <h1 class="page-hero-title reveal" style="transition-delay:0.1s;">Contact Us</h1>
        <p class="section-sub reveal" style="transition-delay:0.2s;">
          Questions about the coalition, enrollment, or STEM programs? We'd love to hear from you.
        </p>
      </div>
    </div>
  </section>


  <!-- ─── CONTACT LAYOUT ───────────────────────────────────────── -->
  <section class="section">
    <div class="container">
      <div class="contact-grid">

        <!-- Left: info panel -->
        <div>
          <div class="section-label reveal">Reach Us</div>
          <h2 class="section-title reveal" style="font-size:clamp(1.6rem,3vw,2.2rem); transition-delay:0.1s;">
            Let's Connect
          </h2>
          <p class="reveal" style="color:var(--text-muted); font-size:0.95rem; line-height:1.78; margin-bottom:36px; transition-delay:0.2s;">
            Whether you're a student, parent, or community partner — our team responds within 1–2 business days.
          </p>

          <div class="contact-cards">

            <!-- REPLACE: real email in this file's frontmatter -->
            <div class="card top-border-navy reveal contact-card" style="transition-delay:0.1s;">
              <div class="icon-box" style="margin:0; flex-shrink:0;">
                <svg viewBox="0 0 24 24"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/><polyline points="22,6 12,13 2,6"/></svg>
              </div>
              <div>
                <div class="contact-label">Email</div>
                <a href={`mailto:${contactEmail}`} class="contact-value-link">{contactEmail}</a>
              </div>
            </div>

            <!-- REPLACE: real address -->
            <div class="card top-border-green reveal contact-card" style="transition-delay:0.18s;">
              <div class="icon-box icon-box-green" style="margin:0; flex-shrink:0;">
                <svg viewBox="0 0 24 24"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/><circle cx="12" cy="10" r="3"/></svg>
              </div>
              <div>
                <div class="contact-label">District</div>
                <p class="contact-value">
                  {site.district}<br />
                  <span class="contact-value-sub">{contactAddress}</span>
                </p>
              </div>
            </div>

            <!-- REPLACE: real meeting schedule -->
            <div class="card top-border-crimson reveal contact-card" style="transition-delay:0.26s;">
              <div class="icon-box icon-box-crimson" style="margin:0; flex-shrink:0;">
                <svg viewBox="0 0 24 24"><rect x="3" y="4" width="18" height="18" rx="2" ry="2"/><line x1="16" y1="2" x2="16" y2="6"/><line x1="8" y1="2" x2="8" y2="6"/><line x1="3" y1="10" x2="21" y2="10"/></svg>
              </div>
              <div>
                <div class="contact-label">Meetings</div>
                <p class="contact-value">
                  {contactMeetings}<br />
                  <span class="contact-value-sub">{contactMeetingsSub}</span>
                </p>
              </div>
            </div>

            <!-- Social links — update URLs in src/data/site.js -->
            {(site.social.instagram || site.social.linkedin || site.social.youtube) && (
              <div class="reveal" style="transition-delay:0.34s; padding: 0 4px; margin-top:4px;">
                <div class="contact-label" style="margin-bottom:12px;">Follow Along</div>
                <div style="display:flex; gap:10px; flex-wrap:wrap;">
                  {site.social.instagram && (
                    <a href={site.social.instagram} class="btn btn-outline" style="padding:9px 18px; font-size:0.56rem;">Instagram</a>
                  )}
                  {site.social.linkedin && (
                    <a href={site.social.linkedin} class="btn btn-outline" style="padding:9px 18px; font-size:0.56rem;">LinkedIn</a>
                  )}
                  {site.social.youtube && (
                    <a href={site.social.youtube} class="btn btn-outline" style="padding:9px 18px; font-size:0.56rem;">YouTube</a>
                  )}
                </div>
              </div>
            )}

          </div>
        </div>

        <!-- Right: form -->
        <div class="reveal-right">
          <div class="form-card">
            <h3 class="form-card-title">Send a Message</h3>
            <p class="form-card-sub">We'll get back to you within 1–2 business days.</p>

            <!--
              To enable real email delivery, set site.formAction in src/data/site.js.
              See README for Formspree / Netlify Forms instructions.
            -->
            <form
              id="contact-form"
              action={site.formAction ?? undefined}
            >
              <div class="form-row">
                <div class="form-field">
                  <label>Name</label>
                  <input type="text" name="name" placeholder="Your name" required />
                </div>
                <div class="form-field">
                  <label>Email</label>
                  <input type="email" name="email" placeholder="you@email.com" required />
                </div>
              </div>

              <div class="form-field">
                <label>Subject</label>
                <select name="subject" required>
                  <option value="">Select a topic</option>
                  {contactTopics.map((t) => <option>{t}</option>)}
                </select>
              </div>

              <div class="form-field">
                <label>Message</label>
                <textarea name="message" placeholder="Your message..." rows="6" required></textarea>
              </div>

              <div class="form-footer">
                <button type="submit" class="btn btn-primary">
                  Send Message
                  <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round">
                    <line x1="22" y1="2" x2="11" y2="13"/><polygon points="22 2 15 22 11 13 2 9 22 2"/>
                  </svg>
                </button>
                <p class="form-note">
                  Enable delivery via <a href="https://formspree.io" target="_blank">Formspree</a>
                </p>
              </div>
            </form>
          </div>
        </div>

      </div>
    </div>
  </section>

</Layout>


<style>
  .hero-text-block { max-width: 560px; }

  .page-hero-grid {
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(rgba(255,255,255,0.03) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255,255,255,0.03) 1px, transparent 1px);
    background-size: 48px 48px;
    pointer-events: none;
  }

  .page-hero-title {
    font-size: clamp(2rem, 5.5vw, 4rem);
    color: #fff;
  }

  /* ── Contact layout ── */
  .contact-grid {
    display: grid;
    grid-template-columns: 1fr 1.7fr;
    gap: 64px;
    align-items: start;
  }

  /* ── Info cards ── */
  .contact-cards { display: flex; flex-direction: column; gap: 12px; }

  .contact-card {
    padding: 20px 24px !important;
    display: flex;
    align-items: flex-start;
    gap: 16px;
  }

  .contact-label {
    font-family: var(--font-display);
    font-size: 0.52rem;
    letter-spacing: 0.18em;
    text-transform: uppercase;
    color: var(--text-dim);
    margin-bottom: 4px;
    font-weight: 600;
  }

  .contact-value {
    color: var(--ink);
    font-size: 0.92rem;
    line-height: 1.5;
    font-weight: 500;
  }
  .contact-value-sub { font-weight: 400; color: var(--text-muted); }

  .contact-value-link {
    color: var(--navy);
    font-size: 0.92rem;
    font-weight: 500;
    text-decoration: none;
  }
  .contact-value-link:hover { text-decoration: underline; }

  /* ── Form card ── */
  .form-card {
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    padding: 44px 40px;
    box-shadow: var(--shadow-md);
  }

  .form-card-title {
    font-family: var(--font-display);
    font-size: 1rem;
    font-weight: 700;
    letter-spacing: 0.04em;
    margin-bottom: 6px;
    color: var(--ink);
  }
  .form-card-sub {
    color: var(--text-muted);
    font-size: 0.85rem;
    margin-bottom: 32px;
  }

  form {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 18px;
  }
  .form-field { display: flex; flex-direction: column; }

  label {
    display: block;
    font-family: var(--font-display);
    font-size: 0.52rem;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    font-weight: 600;
    color: var(--text-muted);
    margin-bottom: 8px;
  }

  input, select, textarea {
    width: 100%;
    background: var(--bg);
    border: 1.5px solid var(--border-med);
    border-radius: var(--radius);
    padding: 12px 16px;
    color: var(--text);
    font-family: var(--font-body);
    font-size: 0.95rem;
    outline: none;
    transition: border-color 0.22s ease, box-shadow 0.22s ease;
    box-sizing: border-box;
  }
  input:focus, select:focus, textarea:focus {
    border-color: var(--navy);
    box-shadow: 0 0 0 3px rgba(27,42,74,0.08);
    background: var(--bg-card);
  }
  select { cursor: pointer; }
  textarea { resize: vertical; }

  .form-footer {
    display: flex;
    align-items: center;
    gap: 18px;
    flex-wrap: wrap;
  }
  .form-note { font-size: 0.72rem; color: var(--text-dim); }
  .form-note a { color: var(--navy); text-decoration: underline; }
</style>
