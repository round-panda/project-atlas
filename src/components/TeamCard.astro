---
import { teamIcons } from '../data/teams.js';

interface Props {
  number: string;
  name: string;
  program: string;
  description: string;
  tags: string[];
  awards: string[];
  advisor: string;
  accentColor: 'navy' | 'crimson' | 'green';
  photo?: string; // optional image path, e.g. '/assets/images/teams/team1.jpg'
}

const { number, name, program, description, tags, awards, advisor, accentColor, photo } = Astro.props;
const iconPath = teamIcons[accentColor];
---

<div class={`team-card top-border-${accentColor}`}>

  <div class="team-card-header">
    <span class={`team-number team-number-${accentColor}`}>{number}</span>
    <div class={`icon-box ${accentColor !== 'navy' ? `icon-box-${accentColor}` : ''}`}>
      <svg viewBox="0 0 24 24" set:html={iconPath} />
    </div>
    <h3 class="team-name">{name}</h3>
    <p class="team-program">{program}</p>
  </div>

  <div class="team-card-body">
    <!-- Team photo: shows placeholder if no photo prop is set -->
    {photo ? (
      <img src={photo} alt={`${name} team photo`} class="team-photo" />
    ) : (
      <div class="team-photo-placeholder">Team Photo</div>
    )}

    <p class="team-description">{description}</p>

    <div class="team-tags">
      {tags.map((tag) => <span class="tag">{tag}</span>)}
      {awards.map((award) => <span class={`tag tag-${accentColor}`}>{award}</span>)}
    </div>

    <div class="team-advisor">
      Advisor: <span>{advisor}</span>
    </div>
  </div>

</div>

<style>
  .team-card {
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-sm);
    transition: border-color 0.25s ease, box-shadow 0.25s ease, transform 0.25s ease;
  }
  .team-card:hover {
    border-color: var(--border-med);
    box-shadow: var(--shadow-lg);
    transform: translateY(-4px);
  }

  .team-card-header {
    padding: 28px 28px 24px;
    border-bottom: 1px solid var(--border);
    position: relative;
  }

  .team-number {
    font-family: var(--font-display);
    font-size: 4.5rem;
    font-weight: 800;
    letter-spacing: -0.05em;
    line-height: 1;
    position: absolute;
    top: 10px;
    right: 16px;
    user-select: none;
  }
  .team-number-navy    { color: rgba(27,42,74,0.05); }
  .team-number-crimson { color: rgba(160,24,48,0.06); }
  .team-number-green   { color: rgba(45,90,69,0.06); }

  .icon-box { margin-bottom: 12px; }

  .team-name {
    font-family: var(--font-display);
    font-size: 0.95rem;
    font-weight: 700;
    letter-spacing: 0.04em;
    color: var(--ink);
    margin-bottom: 3px;
  }

  .team-program {
    font-size: 0.78rem;
    color: var(--text-dim);
  }

  .team-card-body { padding: 24px 28px 28px; }

  .team-photo {
    width: 100%;
    aspect-ratio: 16 / 7;
    object-fit: cover;
    border-radius: var(--radius);
    border: 1px solid var(--border);
    margin-bottom: 18px;
  }

  .team-photo-placeholder {
    aspect-ratio: 16 / 7;
    background: var(--bg-2);
    border-radius: var(--radius);
    border: 1px solid var(--border);
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 18px;
    font-size: 0.72rem;
    color: var(--text-dim);
    font-family: var(--font-display);
    letter-spacing: 0.1em;
    text-transform: uppercase;
  }

  .team-description {
    color: var(--text-muted);
    font-size: 0.88rem;
    line-height: 1.72;
    margin-bottom: 18px;
  }

  .team-tags { margin-bottom: 18px; }

  .team-advisor {
    padding-top: 16px;
    border-top: 1px solid var(--border);
    font-size: 0.78rem;
    color: var(--text-dim);
  }
  .team-advisor span {
    color: var(--text);
    font-weight: 500;
  }

  @media (max-width: 480px) {
    .team-card-header { padding: 22px 20px 18px; }
    .team-card-body   { padding: 18px 20px 22px; }
  }
</style>
