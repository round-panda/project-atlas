---
import { site } from '../data/site.js';
import { url } from '../utils/url.js';

const year = new Date().getFullYear();
---

<footer>
  <div class="container">
    <div class="footer-grid">

      <div class="footer-brand">
        <!-- REPLACE: swap with your actual light/white logo -->
        <img loading="lazy" src={url('/assets/images/logo-light.svg')} alt="Project Atlas" style="height:30px; opacity:0.7;" />
        <p>
          Uniting six engineering teams under one voice for student outreach and fundraising for the {site.district}.
        </p>
      </div>

      <div class="footer-col">
        <h4>Navigate</h4>
        <a href={url('/')}>Home</a>
        <a href={url('/purpose')}>Purpose</a>
        <a href={url('/teams')}>Teams</a>
        <a href={url('/join')}>Join</a>
        <a href={url('/contact')}>Contact</a>
      </div>

      <div class="footer-col">
        <h4>District</h4>
        <a href={site.links.tcusdWebsite} target="_blank">{site.districtShort} Website</a>
        <a href={site.links.enrollment} target="_blank">Enrollment</a>
        <a href={site.links.calendars} target="_blank">Calendars</a>
      </div>

    </div>

    <div class="footer-bottom">
      <p>&copy; {year} {site.name} &mdash; {site.location}.</p>
      <span class="footer-district">{site.district}</span>
    </div>
  </div>
</footer>
